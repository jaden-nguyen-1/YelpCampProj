<% layout('layout/boilerplate')%>

<div id="cluster-map"></div>

<h1>all campgrounds</h1>

<div>
  <a href="/campgrounds/new">ADD CAMPGROUND</a>
</div>

<% for (let campground of allCampgrounds){ %>
<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <% if (campground.images.length){ %>
      <img class="img-fluid" src="<%=campground.images[0].url%>" />
      <% } else {%>
        <img class="img-fluid" src="https://res.cloudinary.com/dvqsqjzb8/image/upload/v1627363770/YelpCamp/qix03clrlouf8abzjzmz.jpg" />
        <% } %> 
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=campground.title%></h5>
        <p class="card-text"><%=campground.description%></p>
        <p class="card-text">
          <small class="text-muted"><%=campground.location%></small>
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View</a>
      </div>
    </div>
  </div>
</div>

<% } %>

